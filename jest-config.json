{
  "testPathIgnorePatterns": [".*/node_modules/"],
  "transform": {
    "^.+\\.(t|j)sx?$": "ts-jest"
  },
  "testMatch": ["**/*.test.ts"],
  "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json", "node"],
  "collectCoverage": true,
  "coverageDirectory": "./coverage/",
  "collectCoverageFrom": ["src/**/*.ts"]
}
